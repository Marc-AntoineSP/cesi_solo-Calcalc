<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title><%= title || 'Error title' %></title>
    <link rel="stylesheet" href="/public/tailwind.css">
    <%- include('../partials/head') %>
  </head>
  <body class="flex flex-col bg-base-100">
    <%- include('../partials/header') %>
    <main class="mx-auto w-full max-w-screen-2xl px-4 md:px-6 lg:px-8 py-6">
      <%- include(page, locals) %>
      <dialog id="editModal" class="modal">
        <div class="modal-box">
          <h3 class="font-bold text-lg">Modifier</h3>
          <form id="editForm" class="flex flex-col gap-3">
            <input type="hidden" name="id" />
            <label>Nom <input name="name" class="input input-bordered" /></label>
            <label>Description <textarea name="description" class="input input-bordered" ></textarea></label>
            <label>Calories/100g <input name="calocent" type="number" step="1" class="input input-bordered" /></label>
            <div class="modal-action">
              <button type="button" class="btn" data-role="cancel">Annuler</button>
              <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
            <p class="text-error hidden" data-role="error"></p>
          </form>
        </div>
      </dialog>
    </main>
  </body>
</html>